{% extends 'base.html.twig' %}

{% block title %}Mes Rendez-Vous
{% endblock %}

{% block body %}
	<h1 class="title">VOS RENDEZ-VOUS</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Hour</th>
				<th>Surname</th>
				<th>Age</th>
				<th>Breed</th>
				<th>Sexe</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for appointment in appointments %}
				<tr>
					<td>{{ appointment.date ? appointment.date|date('Y-m-d') : '' }}</td>
					<td>{{ appointment.hour }}</td>
					<td>{{ appointment.surname }}</td>
					<td>{{ appointment.age }}</td>
					<td>{{ appointment.breed }}</td>
					<td>{{ appointment.sexe }}</td>
					<td>
						{% if appointment.date|date('Y-m-d') < "now"|date('Y-m-d') %}
							<a href="{{ path('app_book_show', {'id': appointment.id}) }}">show</a>
						{% else %}
							<a href="{{ path('app_book_show', {'id': appointment.id}) }}">show</a>
							<a href="{{ path('app_book_edit', {'id': appointment.id}) }}">edit</a>
						{% endif %}
					</td>
				</tr>
			</td>
		</tbody>
	</tr>
{% else %}
	<tr>
		<td colspan="10">no records found</td>
	</tr>
{% endfor %}</tbody></table><a href="{{ path('app_book_new') }}">NOUVEAU RENDEZ-VOUS</a>{% endblock %}
