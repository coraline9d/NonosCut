{% extends 'base.html.twig' %}

{% block title %}Service
{% endblock %}

{% block body %}
	<h1 class="title">SERVICE</h1>
	<div class="card-container ">
		<div class="row" id="discover">
			{% for service in services %}
				<div class="col-lg-3 col-md-6 col-sm-12">
					<div class="card">
						<img src={{service.image}} alt={{service.name}} title={{service.name}} class="card-img-top">
						<div class="card-body">
							<h3 class="card-title">
								{{service.name}}
							</h3>
							<h5 class="card-subtitle">
								Durée :
								{{service.duration}}h • Prix :
								{{service.price}}€
							</h5>
							<p class="card-text">{{service.description}}</p>
							<a href="{{path('app_book_new')}}" class="btn btn-primary">
								Prendre Rendez-Vous
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
